<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".emailCompose">

    <TextView
        android:id="@+id/textView_from"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:layout_row="0"
        android:layout_column="0"
        android:gravity="top"
        android:textColor="@android:color/black"
        android:text="@string/email_compose_from" />

    <EditText
        android:id="@+id/editText_from"
        android:layout_width="333dp"
        android:layout_height="40dp"
        android:layout_row="0"
        android:layout_column="1"
        android:ems="10"
        android:inputType="textPersonName"
        android:textColor="@android:color/black"
        android:text="" />

    <TextView
        android:id="@+id/textView_to"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:layout_row="1"
        android:layout_column="0"
        android:textColor="@android:color/black"
        android:text="@string/email_compose_to" />

    <EditText
        android:id="@+id/editText_to"
        android:layout_width="333dp"
        android:layout_height="40dp"
        android:layout_row="1"
        android:layout_column="1"
        android:ems="10"
        android:inputType="textPersonName"
        android:textColor="@android:color/black"
        android:text="" />

    <TextView
        android:id="@+id/textView_subject"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:layout_row="2"
        android:layout_column="0"
        android:textColor="@android:color/black"
        android:text="@string/email_compose_subject" />

    <EditText
        android:id="@+id/editText_subject"
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:layout_row="2"
        android:layout_column="1"
        android:ems="10"
        android:inputType="textPersonName"
        android:textColor="@android:color/black"
        android:text="" />

    <Button
        android:id="@+id/button_attach"
        android:layout_width="wrap_content"
        android:layout_height="59dp"
        android:layout_row="3"
        android:layout_column="0"
        android:layout_marginBottom="10dp"
        android:text="@string/email_compose_button_attach"
        android:textColor="@android:color/black" />

    <TextView
        android:id="@+id/textView_attach"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="3"
        android:layout_column="1" />

    <EditText
        android:id="@+id/editText_mail"
        android:layout_width="330dp"
        android:layout_height="221dp"
        android:layout_row="4"
        android:layout_column="1"
        android:ems="10"
        android:gravity="top|left"
        android:inputType="textMultiLine"
        android:text="Mail"
        android:textColor="@android:color/black" />

    <Button
        android:id="@+id/button_send"
        android:layout_width="333dp"
        android:layout_height="wrap_content"
        android:layout_row="5"
        android:layout_column="1"
        android:text="@string/email_compose_button_send"
        android:textColor="@android:color/black"/>
</GridLayout>